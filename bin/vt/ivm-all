#!/bin/bash

# shellcheck disable=SC1091

set -euo pipefail

source "$(dirname "$0")/ivm-utils"

create_all() {
    slog "Creating Incus VMs (Debian, Ubuntu, Fedora, Arch, Tumbleweed, Alpine)..."

    if has_vm "debian-vm"; then
        slog "Debian VM already exists, skipping..."
    else
        slog "Creating Debian VM: debian-vm"
        ivm-create --distro debian --name debian-vm
    fi

    if has_vm "ubuntu-vm"; then
        slog "Ubuntu VM already exists, skipping..."
    else
        slog "Creating Ubuntu VM: ubuntu-vm"
        ivm-create --distro ubuntu --name ubuntu-vm
    fi

    if has_vm "fedora-vm"; then
        slog "Fedora VM already exists, skipping..."
    else
        slog "Creating Fedora VM: fedora-vm"
        ivm-create --distro fedora --name fedora-vm
    fi

    if has_vm "arch-vm"; then
        slog "Arch VM already exists, skipping..."
    else
        slog "Creating Arch VM: arch-vm"
        ivm-create --distro arch --name arch-vm
    fi

    if has_vm "tw-vm"; then
        slog "Tumbleweed VM already exists, skipping..."
    else
        slog "Creating openSUSE Tumbleweed VM: tw-vm"
        ivm-create --distro tw --name tw-vm
    fi

    slog "Listing created VMs:"
    ivm list

    success "All VMs created successfully!"
    slog "You can access them using: incus console <vm-name>"
}

delete_all() {
    slog "Deleting all VMs..."
    for vm in debian-vm ubuntu-vm fedora-vm arch-vm tw-vm; do
        if has_vm "$vm"; then
            slog "Deleting VM: $vm"
            ivm delete "$vm"
        fi
    done
    success "All VMs deleted successfully!"
}

start_all() {
    slog "Starting all VMs..."
    for vm in debian-vm ubuntu-vm fedora-vm arch-vm tw-vm; do
        if has_vm "$vm"; then
            slog "Starting VM: $vm"
            ivm start "$vm"
        fi
    done
    success "All VMs started successfully!"
}

stop_all() {
    slog "Stopping all VMs..."
    for vm in debian-vm ubuntu-vm fedora-vm arch-vm tw-vm; do
        if has_vm "$vm"; then
            slog "Stopping VM: $vm"
            ivm stop "$vm"
        fi
    done
    success "All VMs stopped successfully!"
}

restart_all() {
    slog "Restarting all VMs..."
    for vm in debian-vm ubuntu-vm fedora-vm arch-vm tw-vm; do
        if has_vm "$vm"; then
            slog "Restarting VM: $vm"
            ivm restart "$vm"
        fi
    done
    success "All VMs restarted successfully!"
}

usage() {
    cat <<EOF
Usage: $(basename "$0") [OPTION]

Incus VMs created by ivm-create.

Options:
  create       # Create all VMs (default if no option)
  delete       # Delete all VMs
  start        # Start all VMs
  stop         # Stop all VMs
  restart      # Restart all VMs
  --help       # Display this help message
EOF
}

main() {
    check_ivm_prerequisites

    if [[ $# -eq 0 ]]; then
        create_all
    elif [[ "$1" == "delete" ]]; then
        delete_all
    elif [[ "$1" == "start" ]]; then
        start_all
    elif [[ "$1" == "stop" ]]; then
        stop_all
    elif [[ "$1" == "restart" ]]; then
        restart_all
    elif [[ "$1" == "--help" || "$1" == "help" || "$1" == "help" ]]; then
        usage
        exit 0
    elif [[ $# -eq 0 ]] || [[ "$1" == "create" ]]; then
        create_all
    else
        fail "Unknown option: $1"
        usage
        exit 1
    fi
}

main "$@"
