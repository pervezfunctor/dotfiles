#!/usr/bin/env bash

# shellcheck disable=SC1091

set -euo pipefail

source "$(dirname "$0")/vm-utils"
source "$(dirname "$0")/all-utils"

all_op() {
  local op="$1"
  slog "Performing operation '$op' on all VMs..."

  for vm in "${VM_EASY_DISTRO_LIST[@]}"; do
    if vm_exists "${vm}-vme"; then
      vme "$op" "${vm}-vme"
    else
      warn "VM ${vm}-vme does not exist, skipping..."
    fi
  done

  success "Performed operation '$op' on all VMs successfully!"
}

all_create() {
  slog "Creating 4 libvirt VMs (Ubuntu, Fedora, Arch, Debian)..."

  for distro in "${VM_EASY_DISTRO_LIST[@]}"; do
    if vm_exists "${distro}-vme"; then
      warn "$distro VM already exists, skipping..."
    else
      vme-create --distro "$distro" --name "${distro}-vme"
    fi
  done

  success "All VMs created successfully!"
  slog "You can access them using: virsh console <vm-name>"
}

all_delete() {
  all_op "delete"
}

all_start() {
  all_op "start"
}

all_stop() {
  all_op "stop"
}

all_restart() {
  all_op "restart"
}

usage() {
  all_usage "libvirt" "VMs"
}

main() {
  virt_check_prerequisites
  all_parse_args "$@"
}

main "$@"
