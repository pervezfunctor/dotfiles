#!/usr/bin/env bash

# shellcheck disable=SC1091

DOT_DIR=${DOT_DIR:-$HOME/.ilm}
source "$DOT_DIR/share/utils"
source "$(dirname "$0")/vt-utils"

export DISTRO_LIST_ict=("debian" "ubuntu" "fedora" "arch" "tw")

export DISTRO_LIST_ivm=("debian" "ubuntu" "fedora" "arch" "tw")

incus_instance_exists() {
  incus list type=container,virtual-machine --format csv --columns n | grep -q "^$1$"
}

incus_check() {
  if ! has_cmd incus; then
    die "incus command not found. Please install Incus first."
  fi

  if ! incus info >/dev/null 2>&1; then
    die "Cannot connect to Incus daemon. Please ensure Incus is running and you have proper permissions."
  fi
}

ivm_check_exists_prerequisites() {
  local missing=()
  for cmd in incus openssl curl wget tee mktemp; do
    if ! has_cmd "$cmd"; then
      missing+=("$cmd")
    fi
  done

  if ((${#missing[@]})); then
    die "Missing required commands: ${missing[*]}"
  fi

  if ! incus info >/dev/null 2>&1; then
    die "Cannot connect to Incus daemon. Please ensure Incus is running and you have proper permissions."
  fi

  has_cmd ivm || {
    die "ivm is not in PATH."
  }

  has_cmd ivm-create || {
    die "ivm-create is not in PATH."
  }
}

ivm_state() {
  incus info "$1" | grep "Status:" | awk '{print $2}'
}

ivm_exists() {
  incus info "$1" >/dev/null 2>&1
}

ivm_check_exists() {
  if ! ivm_exists "$1"; then
    die "VM '$1' not found"
  fi
}

ivm_running() {
  local vm_name="$1"
  ivm_exists "$vm_name" || return 1
  local state
  state=$(ivm_state "$vm_name")
  [[ "$state" == "RUNNING" ]]
}

ivm_check_running() {
  local vm_name="$1"
  ivm_running "$vm_name" || {
    die "VM '$vm_name' is not running (state: $(ivm_state "$vm_name"))"
  }
}

ivm_list() {
  local vm_name="${1:-}"
  local extra_args="${2:---columns=ns4}"

  if [[ -n "$vm_name" ]]; then
    incus list type=virtual-machine "$vm_name" "${extra_args}"
  else
    incus list type=virtual-machine "${extra_args}"
  fi
}

detect_container_user() {
  local container_name="$1"

  case "$container_name" in
  ubuntu*) echo "ubuntu" ;;
  fedora*) echo "fedora" ;;
  centos*) echo "centos" ;;
  debian*) echo "debian" ;;
  arch*) echo "arch" ;;
  tumbleweed* | tw*) echo "opensuse" ;;
  *)
    fail "Could not auto-detect username for container '$container_name'. Use 'ict shell $container_name <username>' instead."
    return 1
    ;;
  esac
}

wait_for_vm_state() {
  local vm_name="$1"
  local expected_state="$2"
  local timeout="${3:-60}"
  local interval="${4:-3}"

  local count=0
  local max_attempts=$((timeout / interval))

  while ((count < max_attempts)); do
    local state
    state=$(ivm_state "$vm_name")
    if [[ "$state" == "$expected_state" ]]; then
      return 0
    fi
    sleep "$interval"
    ((count++))
  done
  return 1
}

ivm_show_ip() {
  local vm_name="$1"
  local ip
  if ! ip=$(ivm_ip "$vm_name"); then
    return 1
  fi
  echo "$ip"
}

ict_check_prerequisites() {
  local missing=()
  for cmd in incus openssl curl wget tee mktemp; do
    if ! has_cmd "$cmd"; then
      missing+=("$cmd")
    fi
  done

  if ((${#missing[@]})); then
    die "Missing required commands: ${missing[*]}"
  fi

  if ! incus info >/dev/null 2>&1; then
    die "Cannot connect to Incus daemon. Please ensure Incus is running and you have proper permissions."
  fi

  has_cmd ict-create || {
    die "ict-create is not in PATH."
  }

  has_cmd ict || {
    die "ict is not in PATH."
  }
}

ict_list() {
  incus_check || return 1

  local extra_args="${2:---columns=ns4}"

  slog "Listing all Incus containers..."
  echo

  incus list type=container "${extra_args}"
}

ict_exists() {
  incus list type=container --format csv --columns n | grep -q "^${1}$"
}

ict_check_exists() {
  local container_name="$1"
  if ! ict_exists "$container_name"; then
    die "Container '$container_name' not found"
  fi
}

ict_state() {
  local container_name="$1"
  incus list type=container "$container_name" --format csv --columns s | head -1
}

ict_running() {
  local container_name="$1"
  ict_exists "$container_name" || return 1

  local state
  state=$(ict_state "$container_name")
  [[ "$state" == "RUNNING" ]]
}

ict_check_running() {
  local container_name="$1"
  if ! ict_running "$container_name"; then
    die "Container '$container_name' is not running (state: $(ict_state "$container_name"))"
  fi
}

incus_ip() {
  local name="$1"
  ivm_check_running "$name" || return 1

  local ip
  ip="$(
    incus query "/1.0/instances/${name}?recursion=2" 2>/dev/null |
      jq -r '
          .state.network
          | to_entries[]
          | select(.key | test("^(eth|en|ens|eno|enp)"))
          | .value.addresses[]
          | select(.family == "inet" and .scope == "global")
          | .address
        ' | head -n1
  )"

  [[ -n "$ip" ]] || return 1

  printf '%s\n' "$ip"
}

ivm_ip() {
  local name="$1"
  ivm_check_running "$name" || return 1
  incus_ip "$name" || return 1
}

ict_ip() {
  local name="$1"
  ict_check_running "$name" || return 1
  incus_ip "$name" || return 1
}
