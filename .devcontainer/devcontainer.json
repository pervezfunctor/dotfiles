{
  "name": "NixOS DevContainer",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "remoteUser": "vscode",
  "workspaceFolder": "/workspace",
  "updateContentCommand": "nix develop --command true",
  "customizations": {
    "vscode": {
      "extensions": [
        "jnoortheen.nix-ide",
        "tamasfe.even-better-toml"
      ]
    }
  }
}
