quiet-echo() {
  if [[ "$1" == "--quiet" ]]; then
    local _quiet=1
    shift
  fi

  if [[ -z "$_quiet" ]]; then
    echo "$@"
  fi
}

flatpak-alias() {
  if [[ "$1" == "--quiet" ]]; then
    local _quiet=1
    shift
  fi

  local cmd="$1"
  local flatpak_id="$2"

  if [[ -z "$cmd" ]]; then
    [[ -z "$_quiet" ]] && echo "‚ùå Command name is required" >&2
    return 2
  fi

  if [[ -z "$flatpak_id" ]]; then
    [[ -z "$_quiet" ]] && echo "‚ùå Flatpak ID is required" >&2
    return 3
  fi

  if ! has_cmd flatpak; then
    [[ -z "$_quiet" ]] && echo "‚ùå flatpak command not found" >&2
    return 4
  fi

  if has_cmd "$cmd"; then
    [[ -z "$_quiet" ]] && echo "‚ö†Ô∏è $cmd already exists, skipping flatpak alias creation" >&2
    return 5
  fi

  if [[ -z "${FLATPAK_LIST:-}" ]]; then
    if ! FLATPAK_LIST=$(flatpak list --columns=application 2>/dev/null); then
      [[ -z "$_quiet" ]] && echo "‚ùå Failed to retrieve flatpak application list" >&2
      return 6
    fi
  fi

  if printf '%s\n' "$FLATPAK_LIST" | grep -Fxq -- "$flatpak_id"; then
    [[ -z "$_quiet" ]] && echo "‚ú® Creating alias for $cmd -> flatpak run $flatpak_id"
    local alias_def
    printf -v alias_def "%s=%s" "$cmd" "flatpak run $flatpak_id"
    if ! alias "$alias_def"; then
      [[ -z "$_quiet" ]] && echo "‚ùå Failed to create alias for $cmd" >&2
      return 7
    fi
    return 0
  else
    [[ -z "$_quiet" ]] && echo "‚ö†Ô∏è Flatpak app '$flatpak_id' not installed, skipping alias creation for $cmd" >&2
    return 8
  fi
}

flatpak-aliases-create() {
  # --quiet
  if [[ "$1" == "--quiet" ]]; then
    local _quiet=1
  fi

  if [[ -v CONTAINER_ID ]]; then
    [[ -z "$_quiet" ]] && echo "üì¶ In a container environment, skipping flatpak alias creation"
    return 0
  fi

  if ! has_cmd flatpak; then
    [[ -z "$_quiet" ]] && echo "üì¶ flatpak not installed, skipping flatpak alias creation"
    return 1
  fi

  if ! FLATPAK_LIST=$(flatpak list --columns=application 2>/dev/null); then
    [[ -z "$_quiet" ]] && echo "‚ùå Failed to retrieve flatpak application list"
    return 2
  fi

  local aliases=(
    "wezterm:org.wezfurlong.wezterm"
    "clion:com.jetbrains.CLion"
    "chrome:com.google.Chrome"
    "code:com.visualstudio.code"
    "nvim:io.neovim.nvim"
    "emacs:org.gnu.emacs"
  )

  local failed_aliases=()

  for alias_def in "${aliases[@]}"; do
    IFS=':' read -r cmd flatpak_id <<<"$alias_def"
    if ! flatpak-alias --quiet "$cmd" "$flatpak_id"; then
      failed_aliases+=("$cmd")
    fi
  done

  if [[ ${#failed_aliases[@]} -gt 0 ]]; then
    [[ -z "$_quiet" ]] && echo "‚ùå Failed to create aliases for: ${failed_aliases[*]}"
  fi

  unset FLATPAK_LIST
}

flatpak-aliases-create --quiet

