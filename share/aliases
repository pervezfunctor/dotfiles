fcd() {
  cd "$(find . -type d -not -path '*/.*' | fzf)" && l
}

fvim() {
  local file
  file=$(find . -type f -not -path '*/.*' | fzf)
  if [ -n "$file" ]; then
    nvim "$file"
  fi
}

