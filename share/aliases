#!/usr/bin/env bash

export BOXES_DIR=${USE_BOXES_DIR:-${BOXES_DIR}}

if is_linux; then
  alias open="xdg-open"

  pbcopy() {
    if [ "$XDG_SESSION_TYPE" = "wayland" ]; then
      wl-copy
    else
      xsel --clipboard --input
    fi
  }

  pbpaste() {
    if [ "$XDG_SESSION_TYPE" = "wayland" ]; then
      wl-paste --no-newline
    else
      xsel --clipboard --output
    fi
  }
fi

