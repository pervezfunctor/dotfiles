
#! /usr/bin/env bash

{

if command -v apt-get > /dev/null; then
    sudo apt-get install -y curl
else
    echo "apt-get not found. Please install apt-get and try again."
    exit 1
fi

source <(curl -sSL https://dub.sh/z3pTnAK)

main() {
    dotfiles_install
    essential_install

    flathub_install
    snap_install
    brew_install

    go_install
    rust_install
    pnpm_install
    asdf_install

    fonts_install

    cpp_install
    python_install

    shell_install

    neovim_install
    vscode_install
    apps_install

    virt_install

    config_install

    set_zsh_as_default
}

is_apt || err_exit "This script works only on Ubuntu. Quitting."

bootstrap "Ubuntu desktop setup(desktop)"

}
