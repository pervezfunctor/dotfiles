#!/usr/bin/env bash

set -euo pipefail -o errtrace

# shellcheck disable=SC1091
source "$(dirname "$0")/utils"

CTID="$1"
HOST_PATH="$2"
CONTAINER_PATH="/mnt/media"
CONFIG_FILE="/etc/pve/lxc/${CTID}.conf"

usage() {
  echo "Usage: $0 -c CTID -h HOST_PATH [-p CONTAINER_PATH]"
  echo "Options:"
  echo "  -c, --container <CTID>        Container ID"
  echo "  -h, --host-path <PATH>        Host path to bind mount"
  echo "  -p, --container-path <PATH>   Container path to mount to (default: /mnt/media)"
}

parse_args() {
  while [[ $# -gt 0 ]]; do
    case $1 in
    -c | --container)
      CTID="$2"
      shift 2
      ;;
    -h | --host-path)
      HOST_PATH="$2"
      shift 2
      ;;
    -p | --container-path)
      CONTAINER_PATH="$2"
      shift 2
      ;;
    *)
      echo "Unknown option: $1"
      usage
      exit 1
      ;;
    esac
  done
}

main() {
  parse_args "$@"

  if [[ -z "$CTID" || -z "$HOST_PATH" ]]; then
    usage
    exit 1
  fi

  check_container "$CTID" || exit 1

  if grep -q '^unprivileged: 1' "$CONFIG_FILE"; then
    PRIVILEGED="no"
  else
    PRIVILEGED="yes"
  fi

  echo "ðŸ” Container $CTID is $([[ "$PRIVILEGED" == "yes" ]] && echo "privileged" || echo "unprivileged")"

  if [[ ! -d "$HOST_PATH" ]]; then
    echo "ðŸ“‚ Creating host media folder at $HOST_PATH"
    sudo mkdir -p "$HOST_PATH"
  fi

  # Detect container UID:GID for unprivileged containers
  if [[ "$PRIVILEGED" == "no" ]]; then
    echo "ðŸ‘¤ Detecting main user inside unprivileged container..."
    CONTAINER_USER_INFO=$(pct exec "$CTID" -- getent passwd | awk -F: '$3 >= 1000 && $3 < 65534 {print $1,$3,$4; exit}')
    if [[ -z "$CONTAINER_USER_INFO" ]]; then
      echo "âš ï¸  Could not detect a normal user inside the container. Defaulting to UID 1000."
      CONTAINER_UID=1000
      CONTAINER_GID=1000
    else
      CONTAINER_UID=$(echo "$CONTAINER_USER_INFO" | awk '{print $2}')
      CONTAINER_GID=$(echo "$CONTAINER_USER_INFO" | awk '{print $3}')
      echo "ðŸ”Ž Found container user with UID:GID = $CONTAINER_UID:$CONTAINER_GID"
    fi

    echo "ðŸ› ï¸  Setting host folder ownership to match container user"
    sudo chown -R "$CONTAINER_UID:$CONTAINER_GID" "$HOST_PATH"
  else
    echo "âš ï¸  Container is privileged â€” skipping chown"
    echo "âš ï¸  WARNING: Privileged containers have full access to bind-mounted files!"
  fi

  # Find the next available mpX slot
  echo "ðŸ” Searching for available mount slot in $CONFIG_FILE"
  for i in $(seq 0 9); do
    MP_KEY="mp${i}"
    if ! grep -q "^${MP_KEY}:" "$CONFIG_FILE"; then
      echo "âœ… Using slot: $MP_KEY"
      break
    fi
  done

  if [[ $i -eq 10 ]]; then
    echo "âŒ No available mpX slot (mp0â€“mp9)."
    exit 1
  fi

  # Add bind mount
  echo "ðŸ“ Adding bind mount to container $CTID"
  sudo pct set "$CTID" -"${MP_KEY}" "$HOST_PATH,mp=$CONTAINER_PATH"

  # Ask to restart container
  read -rp "ðŸ”„ Restart container $CTID now to apply changes? (y/n): " RESTART
  if [[ "$RESTART" =~ ^[Yy]$ ]]; then
    sudo pct restart "$CTID"
    echo "âœ… Container restarted. Media is now available at $CONTAINER_PATH"
  else
    echo "âœ… Bind mount added. Restart container manually to use it."
  fi

}

main "$@"
