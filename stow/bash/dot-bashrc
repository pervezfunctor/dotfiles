export XDG_CONFIG_HOME=${XDG_CONFIG_HOME:-$HOME/.config}
export DOT_DIR=${DOT_DIR:-$HOME/.dotfiles}

source $DOT_DIR/stow/.local/share/shell/shellrc

# if interactive shell then return
[[ $- == *i* ]] || return

has_cmd mise && eval "$(mise activate bash)"
has_cmd direnv && eval "$(direnv hook bash)"
has_cmd zoxide && eval "$(zoxide init bash)"
has_cmd fzf && source <(fzf --bash)

command -v starship > /dev/null && eval "$(starship init bash)"

eval "$(fzf --bash)"

source_if_exists "$DOT_DIR/stow/.local/share/aliases"

# start_default_tmux_session

